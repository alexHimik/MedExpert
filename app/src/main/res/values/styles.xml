<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget" />

    <style name="Widget.ActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/med_blue</item>
        <item name="background">@color/med_blue</item>
        <item name="contentInsetStart">0dp</item>
    </style>

    <style name="Widget.ActionBar.Transparent" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/med_blue</item>
        <item name="background">@color/med_blue</item>
        <item name="contentInsetStart">0dp</item>
    </style>

    <!--styles for left side bar-->
    <style name="side_title">
        <item name="android:textSize">20sp</item>
    </style>
    <style name="side_text">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#333333</item>
    </style>

    <style name="home_title">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#999999</item>
    </style>
    <style name="home_text">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#333333</item>
    </style>
    <style name="home_30">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">#333333</item>
    </style>
    <style name="home_24_33">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">#333333</item>
    </style>
    <style name="home_24_66">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">#666666</item>
    </style>
    <style name="home_14_33">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#333333</item>
    </style>
    <style name="home_20_99">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#999999</item>
    </style>
    <style name="home_12_99">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#999999</item>
    </style>
    <style name="home_14_99">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#999999</item>
    </style>
    <style name="home_14_66">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#666666</item>
    </style>
    <style name="home_12_33_bold">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#333333</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="home_9">
        <item name="android:textSize">9sp</item>
        <item name="android:textColor">#b2b2b2</item>
    </style>
    <style name="home_12_99_bold">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#999999</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="side_bar_text">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="side_bar_text.white" parent="side_bar_text">
        <item name="android:textColor">@color/med_white</item>
    </style>
    <style name="side_bar_text.category" parent="side_bar_text">
        <item name="android:textColor">@color/side_bar_category_text</item>
    </style>

    <style name="about_header_text" parent="side_title">
        <item name="android:textStyle">bold</item>
    </style>

    <!--tutorial styles-->
    <style name="tutorial_content_text_style">
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingExtra">8sp</item>
        <item name="android:textColor">@color/med_white</item>
    </style>
    <style name="tutorial_header_text_style">
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/med_white</item>
    </style>

    <!--Catalog styles-->
    <style name="catalog_list_header_style">
        <item name="android:textColor">@color/color_light_grey</item>
        <item name="android:textSize">@dimen/catalog_header_item_font_size</item>
    </style>
    <style name="catalog_list_main_item_style">
        <item name="android:textColor">@color/side_bar_category_text</item>
        <item name="android:textSize">@dimen/catalog_main_item_font_size</item>
    </style>
    <style name="catalog_list_main_item_style.letter" parent="catalog_list_main_item_style">
        <item name="android:textColor">@color/med_blue</item>
    </style>
    <style name="catalog_tutorial_text_style">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/med_white</item>
        <item name="android:lineSpacingExtra">6sp</item>
    </style>

    <!--action bar styles-->
    <style name="action_bar_title">
        <item name="android:textSize">@dimen/action_bar_title_text_size</item>
        <item name="android:textColor">@color/med_white</item>
    </style>

    <style name="search_action_bar_input">
        <item name="android:hint">@string/search_bar_input_hint</item>
        <item name="android:textColorHint">@color/color_light_grey</item>
        <item name="android:textSize">@dimen/action_bar_title_text_size</item>
        <item name="android:textColor">@color/side_bar_category_text</item>
    </style>

    <style name="TransparentProgressDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="pills_rating_bar_style" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/rating_bar_drawable</item>
        <item name="android:minHeight">12dip</item>
        <item name="android:maxHeight">12dip</item>
    </style>


</resources>