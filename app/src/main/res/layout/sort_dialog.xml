<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/tutorial_btn_back"
    android:transitionGroup="false">

    <com.devspark.robototextview.widget.RobotoTextView
        android:id="@+id/sort_dialog_title"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:fontFamily="roboto"
        app:textWeight="normal"
        android:textSize="20sp"
        android:textColor="@color/color_edittext"
        android:text="@string/sort_dialog_title"
        android:background="@color/med_white"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="24dp"
        android:gravity="left"
        android:layout_marginRight="24dp" />

    <ListView
        android:id="@+id/lv_sort"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="8dp"
        android:textSize="16sp"
        android:textColor="@color/about_text_color"
        android:background="@color/med_white"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="24dp"
        android:gravity="left"
        android:layout_marginRight="24dp"
        android:choiceMode="singleChoice"
        android:drawSelectorOnTop="false"
        android:fastScrollEnabled="true"
         />


</LinearLayout>