<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/home_bg_block">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/iv"
            android:layout_alignParentLeft="true"
            android:paddingLeft="16dp"
            android:paddingTop="28dp"
            android:paddingRight="16dp"
            android:src="@drawable/med_test_img" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/iv2"
            android:layout_alignParentRight="true"
            android:paddingTop="16dp"
            android:paddingRight="16dp"
            android:src="@drawable/med_ic_grey_heart_unchecked" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_toLeftOf="@+id/iv2"
            android:layout_toRightOf="@+id/iv"
            android:layout_height="wrap_content"
            android:paddingTop="32dp"
            android:paddingBottom="36dp">
            <com.devspark.robototextview.widget.RobotoTextView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/home_30"
                app:fontFamily="roboto"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Actonel"
                android:layout_marginTop="@dimen/home_pad_10"
                android:layout_marginBottom="@dimen/home_pad_10"
                android:paddingBottom="10dp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
                <com.devspark.robototextview.widget.RobotoTextView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/home_12_99"
                    app:fontFamily="roboto"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Generic"
                    android:paddingRight="8dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="fill"
                android:paddingBottom="24dp">
                <com.devspark.robototextview.widget.RobotoTextView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/home_12_99"
                    app:fontFamily="roboto"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="from"
                    android:layout_marginRight="8dp"
                    android:paddingTop="30dp" />
                <com.devspark.robototextview.widget.RobotoTextView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/home_24_33"
                    app:fontFamily="roboto"
                    android:text="$5.25"
                    android:id="@+id/price"
                    android:paddingRight="8dp"
                    android:paddingTop="20dp"
                    android:paddingLeft="8dp" />
                <com.devspark.robototextview.widget.RobotoTextView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/home_12_99"
                    app:fontFamily="roboto"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Average \nmarket price"
                    android:paddingTop="20dp" />

                </LinearLayout>
            <com.devspark.robototextview.widget.RobotoTextView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="124dp"
                android:layout_height="36dp"
                style="@style/home_12_99"
                app:fontFamily="roboto"
                android:textColor="@color/med_white"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="FIND SELLERS"
                android:background="@drawable/button_shape"
                android:gravity="center_vertical|center_horizontal" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        android:layout_gravity="center_horizontal"
        android:background="@color/line"></LinearLayout>

</LinearLayout>